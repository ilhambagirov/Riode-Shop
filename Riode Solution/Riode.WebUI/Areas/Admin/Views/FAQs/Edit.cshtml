@model FaqViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="col-lg-12">
    <div class="white_card card_height_100 mb_30">
        <div class="white_card_header">
            <div class="box_header m-0">
                <div class="main-title">
                    <h3 class="m-0">Edit Faq</h3>
                </div>
            </div>
        </div>
        <div class="white_card_body">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row d-flex">
                            <label asp-for="Question" class="col-sm-2">
                                Question
                            </label>
                            <input asp-for="Question" class="form-control col-sm-10"/>
                            <span asp-validation-for="Question" class="col-form-label"></span>
                        </div>
                        <div class="form-group row d-flex">
                            <label asp-for="Answer" class="col-sm-2">
                                Answer
                            </label>
                            <textarea asp-for="Answer" class="textarea col-sm-10"></textarea>
                            <span asp-validation-for="Answer" class="col-form-label"></span>
                        </div>
                        <div class="form-group">
                            <input hidden asp-for="@Model.Id" />
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-controller="faqs" asp-action="Index" class="btn btn-primary">Back to List</a>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

