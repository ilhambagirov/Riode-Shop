@model ProductSizeViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="col-lg-12">
    <div class="white_card card_height_100 mb_30">
        <div class="white_card_header">
            <div class="box_header m-0">
                <div class="main-title">
                    <h3 class="m-0">Edit Size</h3>
                </div>
            </div>
        </div>
        <div class="white_card_body">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row d-flex">
                            <label asp-for="Name" class="control-label col-sm-2">Size</label>
                            <input asp-for="Name" class="form-control col-sm-10" placeholder="Size">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group row d-flex">
                            <label asp-for="Abbr" class="control-label col-sm-2">Abbreviation</label>
                            <input asp-for="Abbr" class="form-control col-sm-10" placeholder="Abbreviation">
                            <span asp-validation-for="Abbr" class="text-danger"></span>
                        </div>
                        <div class="form-group row d-flex">
                            <label asp-for="Description" class="control-label col-sm-2">Description</label>
                            <textarea asp-for="Description" class="form-control col-sm-10" placeholder="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <input hidden asp-for="@Model.Id" />
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-controller="sizes" asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

