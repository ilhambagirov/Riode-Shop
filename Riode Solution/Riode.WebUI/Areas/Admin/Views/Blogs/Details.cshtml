@model Riode.WebUI.Models.Entities.Blog
@using Riode.WebUI.AppCode.Extensions
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Blog</h4>
    <hr />
    <dl class="row">

        <div class="col-8">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
              @Html.Raw(Model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PublishedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PublishedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedByUserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedByUserId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeleteByUserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeleteByUserId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeleteDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeleteDate)
            </dd>
        </div>
        <div class="col-4">
            <p>Image</p>
            <img src="~/uploads/images//blog/mask/masonry/@Model.Images.FirstOrDefault(c=>c.Id==Model.Id).Filename" />
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
