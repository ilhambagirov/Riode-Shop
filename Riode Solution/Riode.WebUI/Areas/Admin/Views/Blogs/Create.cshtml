@model Riode.WebUI.Models.Entities.Blog

@{
    ViewData["Title"] = "Create";
}

<div class="col-lg-12">
    <div class="white_card card_height_100 mb_30">
        <div class="white_card_header">
            <div class="box_header m-0">
                <div class="main-title">
                    <h3 class="m-0">Create Blogs</h3>
                </div>
            </div>
        </div>
        <div class="white_card_body">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label asp-for="Name" class="control-label">Title</label>
                            <input asp-for="Name" class="form-control" placeholder="Title">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <label class="control-label">
                                Şəkil
                            </label>
                            <label class="image-input"
                                   for="file">
                                <input type="hidden" name="fileTemp" value="">
                                <span>×</span>
                            </label>
                            <input name="file"
                                   id="file"
                                   type="file"
                                   accept="image/x-png,image/gif,image/jpeg">
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="CategoryId" class="control-label">Category</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                       @* <div class="form-group col-12">
                            <label asp-for="PublishedDate" class="control-label">PublishedDate</label>
                            <input asp-for="PublishedDate" class="form-control" placeholder="PublishedDate">
                            <span asp-validation-for="PublishedDate" class="text-danger"></span>
                        </div>*@

                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-controller="blogs" asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section addcss{
    <link href="~/libs/single-imager/image-input.css" rel="stylesheet" />
}

@section addjs{
    <script src="~/libs/ckeditor5/ckeditor.js"></script>
    <script src="~/libs/single-imager/jquery.image-input.js"></script>
    <script>
        $(document).ready(function () {
            ClassicEditor
                .create(document.querySelector('#Description'))
                .catch(error => {
                    console.error(error);
                });

        })
    </script>
}
