@model Riode.WebUI.Models.Entities.Products

@{
    ViewData["Title"] = "Create";
}

<div class="col-lg-12">
    <div class="white_card card_height_100 mb_30">
        <div class="white_card_header">
            <div class="box_header m-0">
                <div class="main-title">
                    <h3 class="m-0">Form row</h3>
                </div>
            </div>
        </div>
        <div class="white_card_body">
            <form asp-action="Create" class="card-body row" enctype="multipart/form-data" method="post">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Name" class="control-label">Product</label>
                            <input asp-for="Name" class="form-control" placeholder="Product">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="SKUCode" class="control-label">SKUCode</label>
                            <input asp-for="SKUCode" class="form-control" placeholder="SKUCode">
                            <span asp-validation-for="SKUCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="BrandId" class="control-label">Brand</label>
                            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="CategoryId" class="control-label">Category</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="ShortDescription" class="control-label">Short Description</label>
                            <input asp-for="ShortDescription" class="form-control" placeholder="Short Description">
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>

                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Description" class="control-label">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-controller="products" asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div style="width: 600px;" class="imager-container" id="viewer1" name="images">
                        
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section addcss{
    <link href="~/libs/multiple-imager-js/css/imager.css" rel="stylesheet" />
}

@section addjs{
    <script src="~/libs/multiple-imager-js/js/imager.js"></script>
    <script>
        $('#viewer1').imgadd({
            tnWidth: '120px',
            tnHeight: '120px',
            fontSize: '55px',
            plusInnerHtml: '',
            plusBtnClass: undefined
        });
    </script>
}
